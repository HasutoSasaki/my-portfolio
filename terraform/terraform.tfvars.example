# AWS リージョン
aws_region = "ap-northeast-1"

# プロジェクト名
project_name = "my-portfolio"

# 環境名
environment = "prod"

# カスタムドメイン名（オプション）
# domain_name を設定する場合は、acm_certificate_arn も設定してください
# domain_name = "example.com"

# ACM 証明書の ARN（カスタムドメインを使用する場合）
# CloudFront で使用する ACM 証明書は us-east-1 リージョンで作成する必要があります
# acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxx"

# CloudFront の価格クラス
# PriceClass_All: 全世界
# PriceClass_200: 日本を含むほとんどの地域（南米を除く）
# PriceClass_100: 北米とヨーロッパのみ
price_class = "PriceClass_200"

# IPv6 を有効にするかどうか
enable_ipv6 = true
